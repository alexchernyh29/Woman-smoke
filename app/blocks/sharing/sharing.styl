.sharing
    position relative

    &__list
        display flex
        flex-flow column

    &__item
        display inline-block
        position relative
        width w(50)
        height w(50)
        background $bg-gblue
        border-radius 50%
        margin-bottom w(15)
        transition opacity .3s
        +below(768px)
            width wm(25)
            height wm(25)

        &:hover
            opacity .7

        &:last-child
            margin-right 0

    &__link
        display inline-block
        height 100%
        width 100%
        border-radius 50%

    &__icon
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
        width 100%